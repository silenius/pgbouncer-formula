pgbouncer:
  users:
    admin: somepassword
    pgbouncer: anotherpassword
  config:
    present:
      pgbouncer:
        auth_user: pgbouncer
        auth_query: SELECT * FROM pgbouncer.user_lookup($1)
        admin_users: admin
        log_connections: 0
        log_disconnections: 0
        log_pooler_errors: 1
        verbose: 0
        server_lifetime: 1800
        ignore_startup_parameters: extra_float_digits
      databases:
        '*': host=pg11.lan
    absent:
      pgbouncer:
        somekey: somevalue
